@import url('../../node_modules/semantic-ui-css/semantic.min.css');
@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700&subset=cyrillic');

*:not(i)
  margin 0
  padding 0
  outline none
  list-style none
  font-family 'Open Sans'!important
  letter-spacing 0.3px

.container
  width 400px!important
  margin-top 40px

  p
    text-align center
    line-height 28px

.ui.form
  margin-top 20px

  .button
    font-weight normal

  .countries-dropdown
    position relative

    .ui.selection.dropdown
      min-width 20px
      width 65px

    .phone-mask
      position absolute
      left 75px
      bottom 0
      width calc(100% - 75px)

  .field

    &s
      margin-bottom 25px
      box-sizing border-box

    & > label
      font-weight 600
      text-transform uppercase
      opacity 0.7
